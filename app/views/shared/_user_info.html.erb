<% @user ||= current_user %>
<div class="user-stats">
  <div class="user-icon-box">
    <% if @user.icon.attached? %>
      <%= link_to image_tag( @user.icon_normal, class:"normal-icon"), @user %>
    <% else %>
      <%= link_to image_tag("mencek_icon_default.gif", width:"100", height:"100", class:"normal-icon"), @user %>
    <% end %>
  </div>
  <div class="index-handle"><%= link_to @user.handle, @user %></div>
  <table>
    <tr class="row1">
      <th>投稿数</th><td><%= @user.microposts.count %></td>
    </tr>
  </table>
  <div class="divider"></div>
  <table>
    <tr>
      <th>フォロー</th><th>フォロワー</th>
    </tr>
    <tr>
    <% if current_user?(@user) %>
      <td><%= link_to @user.following.count, following_user_path(@user) %></td><td><%= link_to @user.followers.count, followers_user_path(@user) %></td>
    <% else %>
      <td><%= @user.following.count %></td><td id="followers"><%= @user.followers.count %></td>
    <% end %>
    </tr>
  </table>
  <div class="strong-divider"></div>
  <% if !current_user?(@user) %>
    <div>
      <% if !current_user.following?(@user) %>
        <%= render 'users/follow' %>
      <% else %>
        <%= render 'users/unfollow' %>
      <% end %>
    </div>
  <% end %>
</div>