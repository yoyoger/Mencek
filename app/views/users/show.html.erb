<% provide(:title, "#{@user.handle}さん")  %>
<h1><%= @user.handle %> さんのページ</h1>
<p>投稿数: <%= @user.microposts.count %></p>

<% if @user.microposts.any? %>
  <ol class="posts">
    <%= render @microposts %>
  </ol>
  <%= paginate @microposts %>
<% else %>
  <h2>まだ投稿がありません。</h2>
<% end %>

<div id="delete_button_for_admin">
  <% if current_user.admin? && !current_user?(@user) %>
    <%= link_to "ユーザー削除", @user, method: :delete, data: { confirm: "本当に削除してよろしいですか？" }, class: "btn" %>
  <% end %>
</div>
