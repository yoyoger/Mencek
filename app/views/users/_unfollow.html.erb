<%= form_with model: current_user.active_relationships.find_by(followed_id: @user.id),
              method: :delete, local: false do |form| %>
  <%= form.submit "フォローをやめる", class:"btn unfollow-btn responsive-off", data:{ confirm:"フォローをやめてよろしいですか？" } %>
  <%= form.submit "-", class:"btn unfollow-btn responsive-on", data:{ confirm:"フォローをやめてよろしいですか？" } %>
<% end %>