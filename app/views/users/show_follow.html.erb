<% provide(:title, @title) %>
<section id="follow" class="content">
  <h1><%= @title %></h1>
  <ol class="clearfix">
    <%= render @users %>
  </ol>
  <%= paginate @users %>
  <% @user = User.find(params[:id]) %>
  <% if current_user?(@user) %>
    <%= link_to "≪ マイページへ戻る", @user %>
  <% else %>
    <%= link_to "≪ #{@user.handle} さんのページへ戻る",@user %>
  <% end %>
</section>