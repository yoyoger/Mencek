<li class="feed_post">
  <section>
    <%= link_to "#{micropost.shop_name} | #{micropost.menu_name}", post_path(micropost.id), class:"icon h3" %>
    <p><%= micropost.content %></p>
    <small>Posted at <%= micropost.created_at.year %>/<%= micropost.created_at.month %>/<%= micropost.created_at.day %> <%= micropost.created_at.hour %>:<%= micropost.created_at.min %> by <%= link_to micropost.user.handle, micropost.user %></small>
    <div class="vst_post"><%= link_to "詳しくみる>>", post_path(micropost.id) %></div>
    <% if ( current_user?(micropost.user) || current_user.admin? ) %>
      <%= link_to "削除", delete_post_path(micropost), method: :delete, data: {confirm: "本当によろしいですか？"},class:"delete-btn" %>
    <% end %>
  </section>
</li>