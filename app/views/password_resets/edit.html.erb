<% provide(:title, 'パスワードの再設定') %>
<section id="reset_password" class="user-form content">
  <h1>パスワード再設定</h1>
  <div class="form">
    <%= form_with model: @user, url: update_password_reset_path(params[:id]), local: true do |form| %>
      <%= render 'shared/error_messages', object: form.object %>

      <%= hidden_field_tag :email,@user.email %>

      <div><p>新しいパスワード</p><%= form.password_field :password %></div>
      <div><p>パスワード確認</p><%= form.password_field :password_confirmation %></div>
      <%= form.submit "再設定", class:"btn" %>
    <% end %>
</section>

